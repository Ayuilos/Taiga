{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "store:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://*"
        },
        {
          "url": "http://localhost:*"
        },
        {
          "url": "http://127.0.0.1:*"
        },
        {
          "url": "http://*.localhost:*"
        },
        {
          "url": "http://(192\\.168).*:*"
        }
      ]
    },
    "opener:default",
    "fs:default",
    "fs:allow-exists",
    "fs:allow-app-read-recursive",
    "fs:allow-app-write-recursive",
    "fs:allow-watch"
  ]
}